@model EventEase.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

@if (ViewBag.HasBookings != null && ViewBag.HasBookings)
{
    <div class="alert alert-warning">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning</h4>
        <p>This event has @ViewBag.BookingCount associated booking(s). Deleting it will cancel all associated bookings.</p>
    </div>
}

<h3>Are you sure you want to delete this event?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.Name ?? "N/A"</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">
        @if (ViewBag.HasBookings != null && ViewBag.HasBookings)
        {
            <text>Delete Anyway</text>
        }
        else
        {
            <text>Delete</text>
        }
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>