@using Azure.Core
@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
    var query = Context.Request.Query["searchString"].ToString();
    var selectedEventType = Context.Request.Query["eventTypesId"].ToString();
    var startDate = Context.Request.Query["startDate"].ToString();
    var endDate = Context.Request.Query["endDate"].ToString();
    var availableOnly = Context.Request.Query["availableOnly"].ToString();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> New Booking
    </a>
</div>

<!--  Advanced Search Form -->
<form asp-action="Index" method="get" class="row row-cols-lg-auto g-3 align-items-center mb-4">
    <div class="col-12">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Customer or Venue" value="@query" />
    </div>
    <div class="col-12">
        <select name="eventTypesId" class="form-select">
            <option value="">All Event Types</option>
            @foreach (var eventType in (SelectList)ViewBag.EventTypes)
            {
                <option value="@eventType.Value" selected="@(selectedEventType == eventType.Value ? "selected" : null)">
                    @eventType.Text
                </option>
            }
        </select>
    </div>
    <div class="col-12">
        <input type="date" name="startDate" class="form-control" value="@startDate" />
    </div>
    <div class="col-12">
        <input type="date" name="endDate" class="form-control" value="@endDate" />
    </div>
    <div class="col-12 form-check">
        <input type="checkbox" name="availableOnly" class="form-check-input" value="true" @(availableOnly == "true" ? "checked" : "") />
        <label class="form-check-label">Available Venues Only</label>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-outline-secondary">Filter</button>
    </div>
</form>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Customer</th>
                            <th>Event</th>
                            <th>Type</th>
                            <th>Venue</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Reference</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CustomerName</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Event?.ImageUrl" class="rounded-circle me-2" width="40" height="40" alt="@item.Event?.Name" />
                                        @item.Event?.Name
                                    </div>
                                </td>
                                <td>@item.Event?.EventTypes?.Name</td>
                                <td>@item.Venue?.Name</td>
                                <td>@item.StartTime.ToString("MMM dd, yyyy")</td>
                                <td>@item.StartTime.ToString("h:mm tt") - @item.EndTime.ToString("h:mm tt")</td>
                                <td>@item.BookingReference</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No bookings found. Would you like to <a asp-action="Create">create a new booking</a>?
            </div>
        }
    </div>
</div>
