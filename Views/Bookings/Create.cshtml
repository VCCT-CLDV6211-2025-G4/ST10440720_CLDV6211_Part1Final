@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Hidden BookingDate field to avoid NULL insert error -->
                    <div class="form-group d-none">
                        <label asp-for="BookingDate" class="control-label"></label>
                        <input asp-for="BookingDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="VenueId" class="form-label">Venue</label>
                                <select asp-for="VenueId" class="form-select" id="venueSelect" required>
                                    <option value="">Select a venue</option>
                                    @foreach (var venue in ViewBag.Venues)
                                    {
                                        <option value="@venue.VenueId" data-image="@venue.ImageUrl"
                                                data-capacity="@venue.Capacity">@venue.Name - @venue.Location</option>
                                    }
                                </select>
                                <span asp-validation-for="VenueId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="EventId" class="form-label">Event</label>
                                <select asp-for="EventId" class="form-select" id="eventSelect" required>
                                    <option value="">Select an event</option>
                                    @foreach (var evt in ViewBag.Events)
                                    {
                                        <option value="@evt.EventId" data-image="@evt.ImageUrl">@evt.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="EventId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6 text-center">
                            <img id="venueImage" src="/images/venue-placeholder.jpg" class="img-thumbnail" style="max-height: 200px;">
                            <div id="venueCapacity" class="mt-2 small text-muted"></div>
                        </div>
                        <div class="col-md-6 text-center">
                            <img id="eventImage" src="/images/event-placeholder.jpg" class="img-thumbnail" style="max-height: 200px;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StartTime" class="form-label">Start Time</label>
                                <input asp-for="StartTime" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="EndTime" class="form-label">End Time</label>
                                <input asp-for="EndTime" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-calendar-check me-1"></i> Create Booking
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Booking Tips</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Check venue availability before booking to avoid conflicts.
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Select a venue that fits your event size
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Book early for popular dates
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Double-check dates and times
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

    <script>
        // Update venue image when selection changes
        document.getElementById('venueSelect').addEventListener('change', function () {
            const selectedOption = this.options[this.selectedIndex];
            const imageUrl = selectedOption.getAttribute('data-image') || '/images/venue-placeholder.jpg';
            const capacity = selectedOption.getAttribute('data-capacity') || 'Unknown';

            document.getElementById('venueImage').src = imageUrl;
            document.getElementById('venueCapacity').textContent = `Capacity: ${capacity}`;
        });

        // Update event image when selection changes
        document.getElementById('eventSelect').addEventListener('change', function () {
            const selectedOption = this.options[this.selectedIndex];
            const imageUrl = selectedOption.getAttribute('data-image') || '/images/event-placeholder.jpg';
            document.getElementById('eventImage').src = imageUrl;
        });

        // Set minimum datetime to today
        const today = new Date().toISOString().slice(0, 16);
        document.getElementById('StartTime').min = today;
        document.getElementById('EndTime').min = today;
    </script>
}
